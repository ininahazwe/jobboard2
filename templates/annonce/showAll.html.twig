{% extends 'base.html.twig' %}
{% block title %}Offres d'emploi{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li>Offres d'emploi</li>
            </ol>
            <h1>Toutes les offres d'emploi</h1>
        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">
            {% for annonce in annonces %}
                <div class="border mb-2 p-2">
                    <h2><a href="{{ path('annonce_show_unit', {id:annonce.id, slug:annonce.slug}) }}">{{ annonce.name }}</a></h2>
                    <p>par <a href="{{ path('entreprise_show_unit', {id:annonce.entreprise.id, slug:annonce.entreprise.slug}) }}">{{ annonce.entreprise.name }}</a></p>
                </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}





