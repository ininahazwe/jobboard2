{% extends 'base.html.twig' %}

{% block title %}Agenda index{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('agenda_index') }}">Evénements</a></li>
                <li>Répértoire</li>
            </ol>
            <h1>Gestion des événements</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <a class=" btn btn-primary" href="{{ path('agenda_new') }}">Ajouter</a>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Url</th>
                                <th>Addresse</th>
                                <th>Code ostal</th>
                                <th>Ville</th>
                                <th>Organisateur</th>
                                <th>CreatedAt</th>
                                <th>UpdatedAt</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for agenda in agendas %}
                            <tr>
                                <td><a href="{{ path('agenda_show', {'id': agenda.id}) }}">{{ agenda.title }}</a></td>
                                <td>{{ agenda.webLink }}</td>
                                <td>{{ agenda.address }}</td>
                                <td>{{ agenda.codePostal }}</td>
                                <td>{{ agenda.city }}</td>
                                <td>{{ agenda.organizer }}</td>
                                <td>{{ agenda.createdAt ? agenda.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ agenda.updatedAt ? agenda.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('agenda_edit', {'id': agenda.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>

{% endblock %}
