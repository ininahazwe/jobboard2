{% extends 'base.html.twig' %}

{% block title %}ModeleOffreCommerciale index{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('menu_index') }}">Modèles d'offres</a></li>
                <li>Répértoire</li>
            </ol>
            <h1>Modèles d'offres commerciales</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    {% include('layouts/_dash_sidebar.html.twig') %}
                </div>
                <div class="col-md-9">
                    <a class="btn app-btn-primary mb-4" href="{{ path('modele_offre_commerciale_new') }}">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-earmark-arrow-down me-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z"/>
                        </svg>Ajouter
                    </a>
                     <table class="table" id="datatable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Slug</th>
                                <th>Nombre d'offres</th>
                                <th>Nombre de recruteurs</th>
                                <th>IsCvTheque</th>
                                <th>DureeContrat</th>
                                <th>Prix</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for modele_offre_commerciale in modele_offre_commerciales %}
                            <tr>
                                <td><a href="{{ path('modele_offre_commerciale_show', {'id': modele_offre_commerciale.id}) }}">{{ modele_offre_commerciale.name }}</a></td>
                                <td>{{ modele_offre_commerciale.slug }}</td>
                                <td>{{ modele_offre_commerciale.nombreOffres }}</td>
                                <td>{{ modele_offre_commerciale.nombreRecruteurs }}</td>
                                <td>{{ modele_offre_commerciale.isCvTheque ? 'Yes' : 'No' }}</td>
                                <td>{{ modele_offre_commerciale.dureeContrat }}</td>
                                <td>{{ modele_offre_commerciale.prix }}</td>
                                <td>
                                    <div class="d-flex justify-content-around">
                                        <a href="{{ path('modele_offre_commerciale_edit', {'id': modele_offre_commerciale.id}) }}" class="d-flex align-items-center"><i class="fas fa-edit"></i></a>
                                        {{ include('modele_offre_commerciale/_delete_form.html.twig') }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
