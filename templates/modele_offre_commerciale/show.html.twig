{% extends 'base.html.twig' %}

{% block title %}ModeleOffreCommerciale{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('menu_index') }}">Modèles d'offres</a></li>
                <li>Lecture</li>
            </ol>
            <h1>{{ modele_offre_commerciale.name }}</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ modele_offre_commerciale.name }}</td>
                    </tr>
                    <tr>
                        <th>Nombre d'offres</th>
                        <td>{{ modele_offre_commerciale.nombreOffres }}</td>
                    </tr>
                    <tr>
                        <th>CVthèque</th>
                        <td>{{ modele_offre_commerciale.isCvTheque ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Durée de contrat</th>
                        <td>{{ modele_offre_commerciale.dureeContrat }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ modele_offre_commerciale.prix }}€</td>
                    </tr>
                </tbody>
            </table>
            <di>
                {{ include('modele_offre_commerciale/_delete_form.html.twig') }}
            </di>
        </div>
    </section>
</main>

{% endblock %}
