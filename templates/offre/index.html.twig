{% extends 'base.html.twig' %}

{% block title %}Offres commerciales{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('offre_index') }}">Offres commerciales</a></li>
                <li>Répértoire</li>
            </ol>
            <h1>Gestion des offres commerciales</h1>

        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    {% include('layouts/_dash_sidebar.html.twig') %}
                </div>
                <div class="col-md-9">
                <a href="{{ path('offre_new') }}" class="btn btn-primary btn-sm mt-1">Ajouter</a>
                <table class="table" id="datatable">
                    <thead>
                        <tr>
                            <th>Formule</th>
                            <th>Nombre d'offres</th>
                            <th>Début de contrat</th>
                            <th>Fin de contrat</th>
                            <th>Accès Cvthèque</th>
                            <th>Prix</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for offre in offres %}
                        <tr>
                            <td>{{ offre.formule }}</td>
                            <td>{{ offre.nombreOffres }}</td>
                            <td>{{ offre.debutContratAt ? offre.debutContratAt|date('d-m-Y') : '' }}</td>
                            <td>{{ offre.finContratAt ? offre.finContratAt|date('d-m-Y') : '' }}</td>
                            <td>{{ offre.isCvTheque ? 'Yes' : 'No' }}</td>
                            <td>{{ offre.prix }}$</td>
                            <td>
                                <div class="d-flex justify-content-around">
                                    <a class="d-flex align-items-center" href="{{ path('offre_show', {'id': offre.id}) }}"><i class="fas fa-eye"></i></a>
                                    <a class="d-flex align-items-center" href="{{ path('offre_edit', {'id': offre.id}) }}"><i class="fas fa-edit"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
