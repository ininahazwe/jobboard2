<form method="post" action="{{ path('offre_delete', {'id': offre.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer cette offre?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
    <button class="btn"><i class="fas fa-trash"></i></button>
</form>
