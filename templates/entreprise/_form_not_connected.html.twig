{{ form_start(form) }}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.address) }}
            {{ form_row(form.city) }}
            {{ form_row(form.zipcode) }}
            {{ form_row(form.regroupementCandidatures) }}
            {{ form_row(form.secteur) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.address) }}
            {{ form_row(form.city) }}
            {{ form_row(form.zipcode) }}
            {{ form_row(form.regroupementCandidatures) }}
            {{ form_row(form.secteur) }}
        </div>
        <div class="col-md-3">
            <h2>Logo</h2>
            {{ form_row(form.logo) }}
            {% if app.request.attributes.get('_route') == 'entreprise_edit' %}
                {% for image in entreprise.logo %}
                    <div>
                        <img class="mt-3" src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">
                        <a href="{{ path('entreprise_delete_files', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <button class="btn btn-primary mt-3">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}

