{% extends 'base.html.twig' %}

{% block title %}Candidature index{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li>Candidatures</li>
            </ol>
            <h2>Gestion des candidatures</h2>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Annonce</th>
                            <th>Candidat</th>
                            <th>Motivation</th>
                            <th>Entreprise</th>
                            <th>Recruteur</th>
                            <th>Type</th>
                            <th>Date de r√©ception</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for candidature in candidatures %}
                        <tr>
                            <td>
                                {% for annonce in candidature.annonces %}
                                <a href="{{ path('annonce_show_unit', {'id': annonce.id, 'slug': annonce.slug }) }}">{{ annonce.name }}</a>
                                {% endfor %}
                            </td>
                            <td>
                                {{ candidature.candidat.fullname }}
                            </td>
                            <td>{{ candidature.motivation }}</td>
                            <td><a href="{{ path('entreprise_show_unit', {'id': candidature.entreprise.id, 'slug': candidature.entreprise.slug }) }}">{{ candidature.entreprise }}</a></td>
                            <td>{{ candidature.recruteur }}</td>
                            <td>{{ candidature.type }}</td>
                            <td>{{ candidature.createdAt ? candidature.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('candidature_edit', {'id': candidature.id}) }}"><i class="fas fa-edit"></i></a>
                                {{ include('candidature/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>
{% endblock %}
