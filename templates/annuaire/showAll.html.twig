{% extends 'base.html.twig' %}
{% block title %}Annuaire{% endblock %}

{% block body %}
    <main id="main">
        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li>Annuaire</li>
                </ol>
                <h1>Tout l'annuaire</h1>
            </div>
        </section><!-- End Breadcrumbs -->

        <section class="inner-page">
            <div class="container">
                <div class="row">
                {% for annuaire in annuaires %}
                    <div class="col-3">
                        <div class="d-flex justify-content-between section-bg p-2 m-1">
                            <a href="{{ path('annuaire_show_unit', {slug:annuaire.slug}) }}">{{ annuaire.title }}</a>
                            <p style="font-size: 10px"> {{ annuaire.categorie}} </p>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </section>
    </main>
{% endblock %}





