{% extends 'base.html.twig' %}
{% block title %}Annuaire{% endblock %}

{% block body %}
    <main id="main">
        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li>Annuaire</li>
                </ol>
                <h1>Tout l'annuaire</h1>
            </div>
        </section><!-- End Breadcrumbs -->

        <section class="inner-page">
            <div class="container">
                {% for annuaire in annuaires %}
                    <div class="border mb-2 p-2">
                        <h2><a href="{{ path('annuaire_show_unit', {id:annuaire.id, slug:annuaire.slug}) }}">{{ annuaire.title }}</a></h2>
                    </div>
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}





