{% extends 'base.html.twig' %}

{% block title %}Annuaire | {{ annuaire.title }}{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('annuaire_index') }}">Annuaire</a></li>
                <li>Lecture</li>
            </ol>
            <h1>{{ annuaire.title }}</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-8">
                    {% for cat in annuaire.categorie %}
                        <span class="badge bg-secondary">{{ cat.value }}</span>
                    {% endfor %}
                    <div class="mt-3">{{ annuaire.content|raw }}</div>
                </div>
                <div class="col-lg-4">
                    <div class="portfolio-info">
                        {% if annuaire.image %}
                            <img class="card-img-top" style="width:50px" src="{{ asset(annuaire.getUrlLastFile()) }}" alt="{{ annuaire.getNameLastFile() }}">
                        {% endif %}
                        <i class="bi bi-house"></i>
                        <div>
                            {% for adresse in annuaire.adresse %}
                                {{ adresse.city }}<br>{{ adresse.zipcode }}
                            {% endfor %}
                        </div>
                        <hr>
                        <i class="bi bi-link-45deg"></i>
                        <div><a href="{{ annuaire.webLink }}" target="_blank">{{ annuaire.webLink }}</a></div>
                        <div><a href="mailto:{{ annuaire.email }}"><i class="bi bi-envelope"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Portfolio Details Section -->
</main>
{% endblock %}
