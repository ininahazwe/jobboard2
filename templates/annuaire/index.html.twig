{% extends 'base.html.twig' %}

{% block title %}Annuaire{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('annuaire_index') }}">Annuaire</a></li>
                <li>Répértoire</li>
            </ol>
            <h1>Gestion de l'annuaire</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    {% include('layouts/dash_sidebar.html.twig') %}
                </div>
                <div class="col-md-9">
                    <a class="btn btn-primary btn-sm mt-1" href="{{ path('annuaire_new') }}">Ajouter</a>
                    <table class="table table-striped table-bordered" id="datatable">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Url</th>
                            <th>Adresse</th>
                            <th>Code postal</th>
                            <th>Ville</th>
                            <th>Telephone</th>
                            <th>Catégorie</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for annuaire in annuaires %}
                            <tr>
                                <td><a href="{{ path('annuaire_show', {'slug': annuaire.slug}) }}">{{ annuaire.title }}</a></td>
                                <td>{{ annuaire.content|slice(0, 120)|raw }}</td>
                                <td>{{ annuaire.webLink }}</td>
                                <td>{{ annuaire.addresse }}</td>
                                <td>{{ annuaire.codePostal }}</td>
                                <td>{{ annuaire.city }}</td>
                                <td>{{ annuaire.telephone }}</td>
                                <td>{{ annuaire.categorie }}</td>
                                <td>
                                    <div class="d-flex justify-content-around">
                                        <a href="{{ path('annuaire_edit', {'id': annuaire.id}) }}" class="d-flex align-items-center"><i class="fas fa-edit"></i></a>
                                        {{ include('annuaire/_delete_form.html.twig') }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="12">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
