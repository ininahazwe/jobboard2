{% if page.getTypeRecruteur() %}
    {% set url = 'base-recruteur.html.twig' %}
{% else %}
    {% set url = 'base.html.twig' %}
{% endif %}

{% extends url %}

{% block title %}{{ page.title }}{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
{#                {% if app.user and app.user.isSuperAdmin() %}
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('page_index') }}">Pages</a></li>
                {% endif %}
                <li>{{ page.title }}</li>#}
            </ol>
            <h1>{{ page.title }}</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-8">
                    {{ page.content|raw }}
                </div>
                <div class="col-lg-4">
                    {% if page.files|length %}
                        <div class="portfolio-info">
                            <img class="card-img-top mx-auto" src="{{ asset(page.getUrlLastFile()) }}" alt="{{ page.getNameLastFile() }}">
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row g-3">
                {% if articles|length %}
                    {% for article in articles %}
                        <div class="col-3">
                            {% if article.images|length %}
                                <img class="w-100" style="width:auto" height="150px" src="{{ asset(article.getUrlLastFile()) }}" alt="{{ article.getNameLastFile() }}">
                            {% endif %}
                            <div class="row">
                                <div class="col-2 d-flex flex-column">
                                    <i class="bi bi-calendar-event"></i>
                                    <p style="font-size: small">{{ article.createdAt|date('d-m-Y') }}</p>
                                </div>
                                <div class="col-8">
                                    <a href="{{ path('article_show', {'slug': article.slug}) }}">{{ article.title }}</a>
                                </div>
                                <div class="col-2 badge-primary">{{ article.categorie }}</div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section><!-- End Portfolio Details Section -->
    <section class="inner-page">
        <div class="container">


        </div>
    </section>
</main>
{% endblock %}
