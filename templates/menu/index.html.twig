{% extends 'base.html.twig' %}

{% block title %}Menu | Répertoire {% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('menu_index') }}">Menus</a></li>
                <li>Répértoire</li>
            </ol>
            <h1>Menus</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    {% include('layouts/_dash_sidebar.html.twig') %}
                </div>
                <div class="col-md-9">
                    <a class="btn btn-success btn-sm mt-1" href="{{ path('menu_new') }}">Ajouter</a>
                    <table class="table" id="datatable">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Url personnalisé</th>
                                <th>Ordre d'affichage</th>
                                <th>Niveau</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for menu in menus %}
                            <tr>
                                <td><b>{{ menu.name }}</b></td>
                                <td>{{ menu.link }}</td>
                                <td>{{ menu.displayOrder }}</td>
                                <td>{{ menu.niveau }}</td>
                                <td>{% if menu.type  == '1' %}
                                        Menu Candidat
                                    {% elseif menu.type  == '2' %}
                                        Menu Recruteur
                                    {% elseif menu.type  == '3' %}
                                        Menu Footer
                                    {% elseif menu.type  == '4' %}
                                        Menu Contenu
                                    {% elseif menu.type  == '5' %}
                                        Menu Réseaux sociaux
                                    {% elseif menu.type  == '6' %}
                                        Menu Twitter
                                    {% elseif menu.type  == '7' %}
                                        Menu Facebook
                                    {% elseif menu.type  == '8' %}
                                        Menu Instagram
                                    {% elseif menu.type  == '9' %}
                                        Menu Skype
                                    {% elseif menu.type  == '10' %}
                                        Menu Linkedin
                                    {% elseif menu.type  == '11' %}
                                        Menu Youtube
                                    {% endif %}</td>
                                <td>
                                    <div class="d-flex justify-content-around">
                                        <a href="{{ path('menu_edit', {'id': menu.id}) }}" class="d-flex align-items-center"><i class="fas fa-edit"></i></a>
                                        {{ include('menu/_delete_form.html.twig') }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
