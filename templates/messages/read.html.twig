{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
    <main id="main">
        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                    <li><a href="{{ path('messages_index') }}">Messages</a></li>
                    <li>Lecture</li>
                </ol>
                <h1>Notification de candidature</h1>
            </div>
        </section><!-- End Breadcrumbs -->
        <section class="inner-page">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        {% include('layouts/_dash_sidebar.html.twig') %}
                    </div>
                    <div class="col-md-9">
                        <a class="btn app-btn-primary mb-4" href="{{ path('messages_new') }}">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-earmark-arrow-down me-2"
                                 fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z"/>
                            </svg>
                            Envoyer un message
                        </a>
                        <div class="app-card app-card-notification shadow-sm mb-4">
                            <div class="app-card-header px-4 py-3">
                                <div class="row g-3 align-items-center">
                                    <div class="col-12 col-lg-auto text-center text-lg-start">
                                        <div class="app-icon-holder">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z"/>
                                            </svg>
                                        </div><!--//app-icon-holder-->
                                    </div><!--//col-->
                                    <div class="col-12 col-lg-auto text-center text-lg-start">
                                        <div class="notification-type mb-2">{{ message.sender.fullname }}</div>
                                        <h4 class="notification-title mb-1">{{ message.title }}</h4>
                                            <ul class="notification-meta list-inline mb-0">
                                                <li class="list-inline-item">{{ message.createdAt|date }}</li>
                                            </ul>
                                    </div><!--//col-->
                                </div><!--//row-->
                            </div><!--//app-card-header-->
                            <div class="app-card-body p-4">
                                <div class="notification-content">{{ message.message }}</div>
                            </div><!--//app-card-body-->
                            <div class="app-card-footer px-4 py-3">
                                <a class="action-link" href="{{ path('messages_index') }}">Tous les messages
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right ms-2"
                                         fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                              d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                                    </svg>
                                </a>
                            </div><!--//app-card-footer-->
                        </div><!--//app-card-->
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}