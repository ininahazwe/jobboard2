{% extends 'base.html.twig' %}

{% block title %}Profiles des utilisateurs{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('page_index') }}">Profiles utilisateurs</a></li>
                <li>Répértoire</li>
            </ol>
            <h1>Gestion des utilisateurs</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">
            <div class="row">
                <div class="row">
                    <div class="col-md-3">
                        {% include('layouts/_dash_sidebar.html.twig') %}
                    </div>
                    <div class="col-md-9">
                        <table class="table" id="datatable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Email</th>
                                    <th>Profile</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>
                                       {{ user.fullname|capitalize }}
                                    </td>
                                    <td>{{ user.roleName|capitalize }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        <div class="d-flex justify-content-around">
                                            {% if user.profile %}
                                                <a class="d-flex align-items-center" href="{{ path('profile_show', {'id':user.profile.id}) }}"><i class="fas fa-eye"></i></a>
                                                <a class="d-flex align-items-center" href="{{ path('profile_edit', {'id':user.profile.id}) }}"><i class="fas fa-edit"></i></a>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" {{ (user.moderation) ? 'checked' : ''}} data-id="{{user.id}}"/>
                                            <label class="form-check-label" for="flexSwitchCheckDefault">
                                                {% if user.moderation  ? 'checked'%}
                                                    Accepté
                                                {% else %}
                                                    non accepté
                                                {% endif %}
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="16">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
{% block javascripts %}
    <script>
        window.onload = () => {
            let activer = document.querySelectorAll("[type=checkbox]")
            for (let bouton of activer) {
                bouton.addEventListener("click", function () {
                    let xmlhttp = new XMLHttpRequest;
                    xmlhttp.open("get", `/cms/utilisateurs/accepter/${this.dataset.id}`)
                    xmlhttp.send()
                })
            }
        }
    </script>
{% endblock %}
