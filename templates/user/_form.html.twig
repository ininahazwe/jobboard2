{{ form_start(form) }}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            {{ form_row(form.email) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.telephone) }}
        </div>
        <div class="col-md-3">
            <h2>Votre photo</h2>
            {{ form_row(form.files) }}
            {% if app.request.attributes.get('_route') == 'app_profile_edit' %}
                {% for image in user.files %}
                    <div>
                        <img class="mt-3" src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">
                        <a href="{{ path('entreprise_delete_files', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <button class="btn btn-primary mt-3">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
