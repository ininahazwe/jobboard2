<div class="row g-4 mb-4">
    <div class="col-6 col-lg-3">
        <div class="app-card app-card-stat shadow-sm h-100">
            <div class="app-card-body p-3 p-lg-4">
                <h4 class="stats-type mb-1">Annonces</h4>
                <div class="stats-figure">{{ annonces|length }}</div>
                <div class="stats-meta">Actives</div>
            </div><!--//app-card-body-->
            <a class="app-card-link-mask" href="{{ path('annonce_index') }}"></a>
        </div><!--//app-card-->
    </div><!--//col-->

    <div class="col-6 col-lg-3">
        <div class="app-card app-card-stat shadow-sm h-100">
            <div class="app-card-body p-3 p-lg-4">
                <h4 class="stats-type mb-1">Candidatures</h4>
                <div class="stats-figure">{{ candidatures|length }}</div>
                <div class="stats-meta">Reçues</div>
            </div><!--//app-card-body-->
            <a class="app-card-link-mask" href="{{ path('candidature_index') }}"></a>
        </div><!--//app-card-->
    </div><!--//col-->
    <div class="col-6 col-lg-3">
        <div class="app-card app-card-stat shadow-sm h-100">
            <div class="app-card-body p-3 p-lg-4">
                <h4 class="stats-type mb-1">Evénements</h4>
                <div class="stats-figure">{{ agendas|length }}</div>
                <div class="stats-meta">Ouverts</div>
            </div><!--//app-card-body-->
            <a class="app-card-link-mask" href="{{ path('agenda_index') }}"></a>
        </div><!--//app-card-->
    </div><!--//col-->
    <div class="col-6 col-lg-3">
        <div class="app-card app-card-stat shadow-sm h-100">
            <div class="app-card-body p-3 p-lg-4">
                <h4 class="stats-type mb-1">Entreprises</h4>
                <div class="stats-figure">{{ entreprises|length }}</div>
                <div class="stats-meta">Enregistrées</div>
            </div><!--//app-card-body-->
            <a class="app-card-link-mask" href="{{ path('entreprise_index') }}"></a>
        </div><!--//app-card-->
    </div><!--//col-->
</div><!--//row-->
<div class="row g-4 mb-4">
    <div class="col-12 col-lg-6">
        <div class="app-card app-card-progress-list h-100 shadow-sm">
            <div class="app-card-header p-3">
                <div class="row justify-content-between align-items-center">
                    <div class="col-auto">
                        <h4 class="app-card-title">Blog</h4>
                    </div><!--//col-->
                    <div class="col-auto">
                        <div class="card-header-action">
                            <a href="{{ path('blog_index') }}">Tous les posts</a>
                        </div><!--//card-header-actions-->
                    </div><!--//col-->
                </div><!--//row-->
            </div><!--//app-card-header-->
            <div class="app-card-body">
                {% for blog in blogs %}
                    <div class="item p-3">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="title mb-1 ">{{ blog.title }}</div>
                            </div><!--//col-->
                            <div class="col-auto">
                                <svg width="1em" height="1em" viewBox="0 0 16 16"
                                     class="bi bi-chevron-right" fill="currentColor"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            </div><!--//col-->
                        </div><!--//row-->
                        <a class="item-link-mask"
                           href="{{ path('blog_show', {'slug':blog.slug}) }}"></a>
                    </div><!--//item-->
                {% endfor %}
            </div><!--//app-card-body-->
        </div><!--//app-card-->
    </div><!--//col-->
    <div class="col-12 col-lg-6">
        <div class="app-card app-card-progress-list h-100 shadow-sm">
            <div class="app-card-header p-3">
                <div class="row justify-content-between align-items-center">
                    <div class="col-auto">
                        <h4 class="app-card-title">Evénements à venir</h4>
                    </div><!--//col-->
                    <div class="col-auto">
                        <div class="card-header-action">
                            <a href="{{ path('agenda_show_all') }}">Tous</a>
                        </div><!--//card-header-actions-->
                    </div><!--//col-->
                </div><!--//row-->
            </div><!--//app-card-header-->
            <div class="app-card-body">
                {% for agenda in agendas %}
                    <div class="item p-3">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="title mb-1 ">{{ agenda.title }}</div>
                            </div><!--//col-->
                            <div class="col-auto">
                                <div class="app-icon-holder">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16"
                                         class="bi bi-chevron-right" fill="currentColor"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                              d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </div><!--//icon-holder-->
                            </div><!--//col-->
                        </div><!--//row-->
                        <a class="item-link-mask"
                           href="{{ path('agenda_show', {'slug':agenda.slug, 'id': agenda.id}) }}"></a>
                    </div><!--//item-->
                {% else %}
                    <div class="app-card-header p-3 border-bottom-0">
                        <div class="row align-items-center gx-3">
                            <div class="col-auto">
                                <div class="app-icon-holder">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                    </svg>
                                </div><!--//icon-holder-->

                            </div><!--//col-->
                            <div class="col-auto">
                                <h4 class="app-card-title">Aucun pour le moment</h4>
                            </div><!--//col-->
                        </div>
                    </div>
                {% endfor %}
            </div><!--//app-card-body-->
        </div><!--//app-card-->
    </div><!--//col-->
</div><!--//row-->
