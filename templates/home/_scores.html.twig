                {% endfor %}
            </div>

            <div class="col-md-4">
                <p><b>Les secteurs qui recrutent le plus</b></p>
                {% for entreprise in entrepriseScore %}
                    <div class="row bg-white m-1 p-1">
                        <div class="col">
                           {{ entreprise.secteur }}
                        </div>
                        <div class="col text-end">
                          <span class="badge bg-secondary">{{ pluralize(entreprise.getNumberAnnonces(), 'annonce') }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="col-md-4">
                <p><b>Les villes proposant le plus d'offres</b></p>
              {% for annonce in annonces %}
                    <div class="row bg-white m-1 p-1">
                        <div class="col">
                            {% for ville in annonce.adresse %}
                              {{ ville.city }}
                            {% endfor %}
                        </div>
                        <div class="col text-end">

                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>
