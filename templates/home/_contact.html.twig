<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Contact</h2>
            <p>Pour demander un devis personnalisé ou obtenir des renseignements complémentaires sur nos prestations :</p>
        </div>
        <div class="row">

            <div class="col-lg-5 d-flex align-items-stretch">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Adresse:</h4>
                        <p>10 rue des tuilières</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>contact@handi-cv.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>tel:</h4>
                        <p>01 42 44 55 44</p>
                    </div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3502.492183988882!2d7.1530983158558845!3d43.66535297912079!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12cdd18383d5ec91%3A0x3db771d8de686dc2!2sNEWNET3D%20SAS!5e1!3m2!1sen!2sfr!4v1626966687860!5m2!1sen!2sfr" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
                </div>

            </div>

            <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                <div class="php-email-form">
                    {{ form_start(contactForm) }}
                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(contactForm.firstname) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(contactForm.lastname) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(contactForm.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(contactForm.subject) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(contactForm.message) }}
                    </div>
                    <div class="my-3">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>

                    {% include 'partials/hcaptcha_submit_button.html.twig' %}

{#                    <div class="text-center"><button type="submit">Envoyer</button></div>#}
                    {{ form_end(contactForm) }}
                </div>
            </div>
        </div>
    </div>
</section><!-- End Contact Section -->