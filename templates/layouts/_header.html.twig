<!-- ======= Header ======= -->

<header id="header"
        {% if app.request.attributes.get('_route') == 'app_home'%}
        class="fixed-top"
    {% else %}
    class="fixed-top header-inner-pages"
    {% endif %}
>
    <div class="container d-flex align-items-center">

        <!-- <div class="logo me-auto"><a href="{{ path('app_home') }}"><img src="{{ asset('assets/img/logo.png') }}" class="img-fluid" alt=""></a></div>-->
        <!-- Uncomment below if you prefer to use an image logo -->
        <a href="{{ path('app_home') }}" class="logo me-auto"><img src="{{ asset('assets/img/logo.png') }}" alt="" class="img-fluid"></a>

        <nav id="navbar" class="navbar">
            <ul>
                {% for menu in menus %}
                    {% set menuN2 = menuRepository.getNiveauMenu(menu, 2) %}


                    {% if menuN2|length %}
                        <li class="dropdown"><a href="#"><span>{{ menu.name }}</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="../../{{ menu.link }}">{{ menu.name }}</a></li>
                                {% for _menu in menuN2 %}

                                    <li><a href="../{{ _menu.link }}">{{ _menu.name }}</a></li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% else %}
                        <li><a class="nav-link" href="../../{{ menu.link }}">{{ menu.name }}</a></li>
                    {% endif %}

                {% endfor %}

