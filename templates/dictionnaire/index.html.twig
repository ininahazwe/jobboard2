{% extends 'base.html.twig' %}

{% block title %}Dictionnaire{% endblock %}

{% block body %}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_profile') }}">Dashboard</a></li>
                <li><a href="{{ path('dictionnaire_index') }}">Dictionnaire</a></li>
                <li>Répértoire</li>
            </ol>
            <h1>Gestion du dictionnaire</h1>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="inner-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <a href="{{ path('dictionnaire_new') }}" class="btn btn-primary btn-sm mt-1">Ajouter</a>
                    <table class="table table-striped table-bordered" id="datatable">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Valeur</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for dictionnaire in dictionnaires %}
                            <tr>
                                <td>{{ dictionnaire.type }}</td>
                                <td>{{ dictionnaire.value }}</td>
                                <td>
                                    <div class="d-flex justify-content-around">
                                        <a href="{{ path('dictionnaire_edit', {'id': dictionnaire.id}) }}" class="d-flex align-items-center"><i class="fas fa-edit"></i></a>
                                        {{ include('dictionnaire/_delete_form.html.twig') }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
