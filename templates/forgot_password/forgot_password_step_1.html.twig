{% extends 'base.html.twig' %}

{% block title 'Forgotten password - Step 1' %}

{% block body %}
    <main class="container mt-3">
        <h1 class="">Forgotten password - Step 1</h1>

        {{ form_start(forgotPasswordFormStep1) }}

        <div class="row mt-5">
            <div class="col-md-6">
                {{ form_row(forgotPasswordFormStep1.email.first) }}
            </div>
            <div class="col-md-6">
                {{ form_row(forgotPasswordFormStep1.email.second) }}
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary d-block mx-auto" title="Saisissez 2 fois votre adresse e-mail pour recevoir le lien de réinitialisation">Envoyez-moi un lien de récupération</button>
        </div>
        {{ form_end(forgotPasswordFormStep1) }}
    </main>
{% endblock %}