{% extends 'base.html.twig' %}

{% block title 'Forgotten password - Step 2' %}

{% block body %}
    <main class="container mt-3">
        <h1 class="">Forgotten password - Step 2</h1>

        {{ form_start(forgotPasswordFormStep2) }}

        <div class="row mt-5">
            <div class="col-md-6">
                {{ form_row(forgotPasswordFormStep2.password.first) }}
            </div>
            <div class="col-md-6">
                {{ form_row(forgotPasswordFormStep2.password.second) }}
            </div>
        </div>
        <div class="mt-3 mb-3 text-center">
            <button type="submit" class="btn btn-info mb3" title="Enter new password 2 times to be reset">Enregistrer</button>
            <br>
            <small>This link will expire at {{ passwordMustBeModifiedBefore }}</small>
        </div>
        {{ form_end(forgotPasswordFormStep2) }}
    </main>

{% endblock %}